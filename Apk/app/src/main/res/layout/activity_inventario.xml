<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ED292929"
    tools:context=".Inventario">

    <ScrollView
        android:id="@+id/scrollInven"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="-41dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#2196F3"
                android:onClick="onClickVoltar"
                android:tint="#000000"
                app:srcCompat="@drawable/abc_vector_test" />

            <VideoView
                android:id="@+id/videoGifInven"
                android:layout_width="match_parent"
                android:layout_height="458dp" />

            <TextView
                android:id="@+id/textCharactres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F2C9"
                android:text="CHARACTERS"
                android:textAlignment="center" />

            <View
                android:id="@+id/divider33"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/leonard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00BCD4"
                android:text="LEONARD"
                android:textAlignment="center" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/anim1"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:onClick="onClickAnim1"
                        app:srcCompat="@drawable/leonard_1" />

                    <ImageView
                        android:id="@+id/anim2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:onClick="onClickAnim2"
                        app:srcCompat="@drawable/leonard_2" />

                    <ImageView
                        android:id="@+id/anim3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:onClick="onClickAnim3"
                        app:srcCompat="@drawable/leonard_3" />
                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:id="@+id/divider34"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/barthurSa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00BCD4"
                android:text="BARTHUR SAMMON"
                android:textAlignment="center" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/anim4"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:onClick="onClickAnim4"
                        app:srcCompat="@drawable/rei_normal" />

                    <ImageView
                        android:id="@+id/anim5"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:onClick="onClickAnim5"
                        app:srcCompat="@drawable/rei_toxic" />

                    <ImageView
                        android:id="@+id/anim6"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:onClick="onClickAnim6"
                        app:srcCompat="@drawable/rei_robot" />
                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:id="@+id/divider35"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F2C9"
                android:text="BUTTONS"
                android:textAlignment="center" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:onClick="onClickBtn1"
                        app:srcCompat="@drawable/button_inicial2off" />

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:onClick="onClickBtn2"
                        app:srcCompat="@drawable/btn2off" />

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:onClick="onClickBtn3"
                        app:srcCompat="@drawable/btn3off" />

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:onClick="onClickBtn4"
                        android:visibility="visible"
                        tools:srcCompat="@drawable/btn4off" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>